<div class="container">
  <h1>New Post:</h1>
  {{> success_msg}}
  {{> error}}
  <div class="input-label" Login>
    <form method="POST" action="">
      <div class="form-floating mb-3">
        <input
          class="form-control"
          id="post_title"
          name="post_title"
          placeholder="Give your message a title"
        />
        <label for="post_title">Give your post a title</label>
      </div>
      <div class="form-floating mb-3">
        <textarea 
          class="form-control" 
          name="post_body" 
          id="post_body" 
          style="height: 100px" 
          placeholder="Enter your message"></textarea>
        <label for="post_body">Enter your message</label>
      </div>
      <input class="btn btn-primary" type="submit" value="Post" />
    </form>
  </div>
</div>