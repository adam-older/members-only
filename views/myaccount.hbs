<div class="container">
  <h1>Welcome</h1>
  {{> success_msg}}
  <div>{{username}}</div>
  <div>User since: {{formatted_creation_date}}</div>
  <div>Membership status: {{membership_status}}</div>
  {{#if membership_status}}
    <div>You are a member!</div>
  {{else}}
    <div>You are not a member!</div>
    <div><a href="/member" class="btn btn-primary">Become a member</a></div>
  {{/if}}
</div>